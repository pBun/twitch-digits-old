@import "vendor/normalize";
@import "vendor/skeleton";
@import "_loader";

html, body {
  height: 100%;
}

body {
  transform: translateZ(0);
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  color: #32323e;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;
  line-height: 1.2em;
}

a {
  text-decoration: none;
  color: #6441a5;
  border-bottom: 1px solid transparent;
  transition: border-color 0.2s ease-in-out;
  &:hover, &:focus {
    color: #6441a5;
    border-color: #6441a5;
  }
}

#chart, svg {
  display: none;
}
.loader-walk {
  display: block;
}
.ready {
  #chart, svg {
    display: block;
  }
  .loader-walk {
    display: none;
  }
}

.image-wrapper img {
  width: 100%;
  display: block;
}
.header {
  height: 10%;
  text-align: center;
  .logo {
    font-weight: 100;
    &:hover, &:focus {
      border-color: transparent;
    }
  }
}
.games {
  position: relative;
  width: 100%;
  height: 90%;
}

@media screen and (max-width: 800px) {
  .game-image {
    display: none;
  }
}
.controls-trigger {
  position: absolute;
  margin-top: 10px;
  top: -11.11%;
  left: 10px;
  cursor: pointer;
  z-index: 999;
}
#control-panel {
  position: absolute;
  display: inline-block;
  z-index: 99;
  left: 0;
  top: -11.11%;
  padding: 50px 20px 20px;
  border: 1px solid #eee;
  border-width: 0 1px 1px 0;
  background: #fefefe;
  border-radius: 0 0 0.5em 0;
  transform: translateX(-100%);
  transition: transform 0.2s ease-in;
  &.open {
    transition-timing-function: ease-out;
    transform: translateX(0);
  }
}
.author {
  position: absolute;
  bottom: 5px;
  right: 5px;
  z-index: 9999;
  color: #999;
  a {
    color: #999;
    &:hover, &:focus {
      border-color: #999;
    }
  }
  &:hover, &:focus {
    transition-timing-function: ease-out;
    opacity: 1;
  }
}

#chart {
  position: absolute;
  top: 0;
  right: 0
  bottom: 0;
  left: 0;
}

#chart path {
  stroke: #fff;
}

svg {
  position: absolute;
  z-index: 1;
}

path {
  transition: opacity 0.2s ease-in-out;
  cursor: pointer;
}

.active path {
  opacity: 0.3;
}

.active path.current {
  opacity: 1;
}

.zoomed path.game {
  opacity: 0;
}

#explanation {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  margin: auto;
  left: 0;
  right: 0;
  width: 140px;
  text-align: center;
  color: #666;
  z-index: 9;
  pointer-events: none;
}
#percentage {
  font-size: 2.5em;
}
